{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "ES2015",
    "lib": [
      "esnext",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "src/**/*.spec.ts"
  ]
}
